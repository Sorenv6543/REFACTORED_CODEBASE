<script setup lang="ts">
import { defineProps, defineEmits } from 'vue';

interface EventData {
  start: string;
  end: string;
  title: string;
  turn: boolean;
  notes: string;
}

const props = defineProps<{
  isVisible: boolean;
  eventData: EventData;
}>();

const emit = defineEmits<{
  (e: 'close'): void;
  (e: 'update', eventData: EventData): void;
}>();

const handleUpdate = () => {
  emit('update', props.eventData);
};
</script>

